<div class="col mt-4">
    <div class="timeline-body bg-themed">
      {% for item in site.data.timeline %}
        <div class="timeline-item">
          <div class="content">
            <h2>
              {{ item.title }}
            </h2>
            {% if item.org or item.relation %}
            <p class="h4">
              {{ item.org }}
              {% if item.relation %} 
                <small class="text-muted font-italic">{{item.relation}}</small>
              {% endif %}
            </p>
            {% endif %}
            <p class="date">{{ item.from }} â€” {{ item.to }}</p>
            <p>{{ item.description }}</p>
          </div>
        </div>
      {% endfor %}
    </div>
</div>